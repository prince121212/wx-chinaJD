page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
}

/* 店铺头部样式 */
.shop-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 24rpx 60rpx;
  color: white;
}

.shop-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.shop-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 20rpx;
}

.shop-name {
  font-size: 36rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 商品展示区域样式 */
.shop-container {
  background: #f5f5f5;
  min-height: calc(100vh - 200rpx);
}

.shop-tabs {
  background: #fff;
  padding: 0 24rpx;
  --td-tab-nav-bg-color: transparent;
  --td-tab-border-color: transparent;
  --td-tab-item-color: #666;
  --td-tab-track-color: #667eea;
}

.t-tabs.t-tabs--top .t-tabs__scroll {
  border-bottom: none !important;
}

.shop-container .t-tabs {
  background: #fff !important;
}

.shop-container .t-tabs .t-tabs-nav {
  background-color: transparent;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.shop-container .t-tabs .t-tabs-scroll {
  border: none !important;
}

.shop-container .tabs-external__item {
  font-size: 28rpx;
}

.shop-container .tabs-external__active {
  color: #667eea !important;
  font-size: 32rpx;
}

.shop-container .tabs-external__track {
  height: 6rpx !important;
  border-radius: 4rpx !important;
  width: 48rpx !important;
  background-color: #667eea !important;
}

.t-tabs.t-tabs--top .t-tabs__item,
.t-tabs.t-tabs--bottom .t-tabs__item {
  height: 86rpx !important;
}

.shop-container .goods-list-container {
  background: #f5f5f5 !important;
  margin-top: 16rpx;
}
